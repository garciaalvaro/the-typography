/*
 * Navigation
 */

.thet-navigation-button
	padding 10px
	height 100%
	text-transform uppercase
	font-weight 600
	align-items center

#thet-navigation-title
	font-weight 500

#thet-filter
	justify-content center
	display flex
	align-items center
	height 100%
	width 100%

#thet-button-add_typography
	position absolute
	right 0

#thet-button-open_info
	position absolute
	right 32px

#thet-button-add_typography
#thet-button-open_info
	svg
		width 20px
		height 20px

#thet-navigation
	height 50px
	width 100%
	position sticky
	top 0
	z-index 1
	background-color var(--background_color)
	border-bottom 1px solid var(--color_01)
	z-index 100
	display flex
	align-items center

	&.thet-view-index
		justify-content center
		padding 0 62px

	.thet-material_ui-select-container
		overflow hidden
		text-overflow ellipsis

		+ .thet-material_ui-select-container
			margin-left 20px
			margin-right -8px
