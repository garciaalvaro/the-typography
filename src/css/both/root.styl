/*
 * Color schemes
 */

#thet-container
	.thet-light
	&
	.thet__menu
		background-color var(--background_color)
		color var(--color_085)
		fill var(--color_07)
		--color_1 rgba(0,0,0,1)
		--color_085 rgba(0,0,0,0.85)
		--color_07 rgba(0,0,0,.7)
		--color_06 rgba(0,0,0,.6)
		--color_04 rgba(0,0,0,.4)
		--color_03 rgba(0,0,0,.3)
		--color_02 rgba(0,0,0,.2)
		--color_01 rgba(0,0,0,.1)
		--color_007 rgba(0,0,0,.07)
		--color_005 rgba(0,0,0,.05)
		--color_003 rgba(0,0,0,.03)
		--background_color #fff
		--background_color_softer #f9f9f9

	.thet-dark
		background-color var(--background_color)
		color var(--color_085)
		color var(--color_085)
		fill var(--color_07)
		--color_1 rgba(255,255,255,1)
		--color_085 rgba(255,255,255,0.85)
		--color_07 rgba(255,255,255,.7)
		--color_06 rgba(255,255,255,.6)
		--color_04 rgba(255,255,255,.4)
		--color_03 rgba(255,255,255,.3)
		--color_02 rgba(255,255,255,.2)
		--color_01 rgba(255,255,255,.1)
		--color_007 rgba(255,255,255,.07)
		--color_005 rgba(255,255,255,.05)
		--color_003 rgba(255,255,255,.03)
		--background_color #22282d
		--background_color_softer #131619

.thet-sticky
	overflow-y auto

.thet-logo-container
	display flex
	justify-content center
	width 22px

	svg
		height 22px
		width 12px

#thet-pinned-logo
	svg
		height 20px
		width 20px
