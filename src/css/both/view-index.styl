/*
 * View Index
 */

$e_deceleration = cubic-bezier(0.0, 0.0, 0.2, 1)

#thet-index
	border-bottom 1px solid var(--color_01)
	margin-bottom 100px

#thet-index-message
	padding 20px

.thet-index-typography
	border-bottom 1px solid var(--color_01)
	position relative

.thet-button-remove_typography
	opacity .1
	transition opacity .1s $e_deceleration
	margin-right -10px
	padding 10px
	z-index 1
	margin-left auto

	svg
		width 18px
		height 18px

	&.thet-is_open
	.thet-index-typography:hover &
		opacity 1

	#thet-container &:focus
		background none
		box-shadow none
		outline none

.thet-index-typography-info
	position relative
	display flex
	align-items center
	padding 0 10px
	font-size 12px
	line-height 3
	color var(--color_07)
	cursor default
	align-items end

	&:first-child
		margin-bottom -3em

.thet-index-typography-title
	cursor pointer
	margin-top -25px
	min-height 170px
	display flex
	justify-content center
	align-items center
	font-size 20px

	span
		padding 40px 20px
		text-align center
		line-height 1.2

button#thet-button-load_more
	width 100%
	line-height 3
	font-size 13px
	justify-content center
	padding 0

#thet-button-load_more
	text-transform uppercase
	font-weight 500
	margin-top 1px

.thet-visibility-icon
	svg
		display block
		width 10px
		height 10px
		fill var(--color_07)

	&.thet-no-is_visible svg
		fill var(--color_01)

	&:hover + .thet-visibility-message
		display block

.thet-visibility-message
	display none
	padding 3px 6px
	background #fff
	color #333
	border 1px solid #aaa
	position absolute
	font-size 12px
	line-height 1.5
	z-index 1
	margin 5px

.thet-index-typography-visibility-message
	top -1px
	left 5px
	margin-right 30px
	transform translateY(-100%)

.thet-index-typography:first-child .thet-visibility-message
	top auto
	bottom -1px
	transform translateY(100%)

.thet-index-typography-visibility-icon
	padding 7px
	margin-left -10px

#thet-button-add_first_typography
	line-height 3.2
	padding 0 10px
	margin 10px
	margin-top -10px
	font-size 13px
	text-transform uppercase
	font-weight 500

	&:hover
	&:focus
		box-shadow 0 0 0 1px var(--color_07)
