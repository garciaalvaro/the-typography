/*
 * Typography
 */

.thet-button-reset_defaults
	svg
		width 18px
		height 18px

	#thet-container &:focus
		background none
		box-shadow none

	#thet-typography &
		padding 5px
		top -34px
		right 30px
		position absolute

	#thet-selector_groups &
		padding 5px
		top 14px
		right 30px
		position absolute

#thet-description
	padding 0 20px 15px
.thet-description
	padding 10px 0

#thet-description
.thet-description
	display block
	font-size .9em
	margin-top -15px
	line-height 1.7
	color var(--color_06)

#thet-namespace-title
	padding 20px 20px 12px
	display block
	background var(--background_color_softer)
	font-size .9em
	line-height 1.7

	~ #thet-title
		border-top 1px solid var(--color_01)

#thet-description
	padding-bottom 20px
	background var(--background_color_softer)
	margin-top 0

.thet-is_predefined
	#thet-title
		padding-bottom 0

div.thet-namespace-info
	position absolute
	bottom 0
	right 0
	white-space nowrap
	max-width 100%

	span
		text-overflow ellipsis
		overflow hidden

#thet-container
	div.thet-no-is_active
		background var(--background_color_softer)

		span
		.thet-visibility-icon
			opacity .3
