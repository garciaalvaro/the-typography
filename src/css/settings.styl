/*
 * Settings
 */

.thet-setting-line_height
	.thet-control-range-value
		margin-right 1em
		min-width 20px
		max-width 20px

.thet-setting-letter_spacing
.thet-setting-font_size
	.thet-control-range-value
		margin-right 1em
		min-width 30px
		max-width 30px

.thet-setting-font
	flex-direction column
	align-items flex-start

	> div
		padding-left 20px
		border-left 1px solid var(--color_04)

.thet-setting-text_selector
	display flex
	align-items center
	height 2.7em

	.thet-material_ui-textfield-input
		font-size 15px

.thet-setting-font_family
	input
		padding-right 25px!important
