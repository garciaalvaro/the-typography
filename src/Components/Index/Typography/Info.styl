/**
 * Typography - Info
 */

+prefix-classes('thet-')

	#thet-content-index

		.typography-info
			display flex
			align-items center
			font-size .85em
			line-height 3
			color var(--color_07)
			cursor default
			align-items baseline
			position absolute
			width 100%
			height 100%
			white-space nowrap
			flex-direction column
			justify-content space-between

			> div
				text-overflow ellipsis
				overflow hidden
				padding 0 10px
