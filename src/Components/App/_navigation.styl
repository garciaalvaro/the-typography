/**
 * App - Navigation
 */

+prefix-classes('thet-')

	#thet-navigation-title
		font-size .85em
		font-weight 500

	.navigation
		height 50px
		width 100%
		position sticky
		top 0
		background-color var(--background_color)
		border-bottom 1px solid var(--color_01)
		z-index 110
		display flex
		align-items center
