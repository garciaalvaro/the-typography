/**
 * App - Buttons
 */

+prefix-classes('thet-')

	.button
	.button-text
	.button-icon
		cursor pointer

		&
		&:focus
		&:hover
			background none
			box-shadow none
			outline none
			border none
			color inherit
			font-size inherit

	#thet-container

		.button-text
			font-size .85em
			line-height 3.2
			padding 0 10px
			text-transform uppercase
			font-weight 500
			cursor pointer

		.button-icon
			padding 0
			display flex
			align-items center
			cursor pointer

			&.has_popover.is_open
			&.has_popover:hover
				opacity .8

		.button-with_border
			border 1px solid var(--color_04)
			transition border-color .15s $e_deceleration

			&:hover
			&:focus
				border 1px solid var(--color_07)
