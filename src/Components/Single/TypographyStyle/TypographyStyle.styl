/**
 * TypographyStyle
 */

@import './_control-font'
@import './_control-range'
@import './_control-react_select'
@import './_control-text_toggle'
@import './_control-text'

+prefix-classes('thet-')

	.control-container
		display flex
		flex-direction row
		align-items center
		width 100%

	.control-container-font
		flex-direction column
		align-items baseline

		> div
			padding-left 20px
			border-left 1px solid var(--color_04)

	.control-container-color
		.color-indicator
			white-space nowrap
			cursor pointer
			min-width 70px // Avoid the colorpicker from jumping when changing color
